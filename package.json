{
  "name": "metacolle",
  "version": "1.0.0",
  "description": "Meta collection file generator for SSG",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "bin": {
    "metacolle": "./bin/cli.js"
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "build": "tsc && npm run build:studio",
    "build:studio": "node scripts/build-studio.js",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "meta",
    "collection",
    "ssg",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "magicast": "^0.5.1"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "esbuild": "^0.24.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "^5.9.3"
  }
}
